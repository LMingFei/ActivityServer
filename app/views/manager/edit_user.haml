=render 'manager/header'
%ul(class="breadcrumb")
  %li
    %a(href="manager_logined")
      首页
  %li(class="active")
    修改密码
=form_for(@user,:url => 'edit_user') do |u|
  .form-group(style="width:600px;padding:50px 50px 20px 50px;width:50% ;margin:auto auto")
    %h4
      修改密码
  .input-group(style="margin:60px auto auto auto" )
    =u.label :'帐号',:class =>'input-group-addon text-center disabled',:style =>'width:120px'
    =u.text_field :name,:class =>'form-control disabled',:style =>'width:450px',:readonly=>true
  .input-group(style="margin:20px auto auto auto" )
    =u.label :'请设置密码',:class =>'input-group-addon text-center',:style =>'width:120px'
    =u.text_field :password,:type =>'password',:class =>'form-control',:style =>'width:450px',:placeholder=>'请输入新密码'
  .input-group(style="margin:20px auto auto auto" )
    =u.label :'请确认密码',:class =>'input-group-addon text-center',:style =>'width:120px'
    =u.text_field :password_confirmation,:type =>'password',:class =>'form-control',:style =>'width:450px',:placeholder=>'请再输入一遍'
  -if @user.errors.any?
    .text-center(class="col-sm-offset-2  text-center alert-danger " style="margin:20px auto auto auto;height:20px;width:450px")
      =@user.errors.full_messages.first
  .text-center
    =u.submit :'确认修改',:class =>'btn btn-default',:style =>'margin:20px auto auto auto ;width:150px'