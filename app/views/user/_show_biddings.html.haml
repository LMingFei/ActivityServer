    %li(style="width:50%")
      %a(href="#profile" data-toggle="tab" )
        竞价统计
  %div(class="tab-content")
    %div(class="tab-pane fade in active" id="home")
      %table(class="table table-hover" style="margin-top:0px" )
        %tr
          %td
            编号
          %td
            姓名
          %td
            价格/元
          %td
            手机号
        -@biddings.each do |bidding|
          %tr
            %td
              =@count+=1
            %td
              =bidding.name
            %td
              =bidding.price
            %td
              =bidding.phone
